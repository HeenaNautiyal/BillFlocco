<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context="com.bizhawkz.billflocco.Login">
    <ImageView
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:src="@drawable/logo"
        android:id="@+id/logoimage"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/logoimage"
        android:layout_centerInParent="true"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_below="@+id/logoimage">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_mail"
            android:drawablePadding="6dp"
            android:paddingRight="14dp"
            android:textSize="16dp"
            android:hint="Username/Email"
            android:paddingLeft="14dp"
            android:background="@drawable/textshape"
            android:drawableLeft="@drawable/user"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"/>
        <EditText
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ed_password"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:drawableLeft="@drawable/passwordwhite"
            android:textSize="16dp"
            android:drawablePadding="6dp"
            android:background="@drawable/textshape"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#d3d3d3"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="Login"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_Submit"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@color/Black"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/tv_registeration"
                android:padding="6dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="right"
                android:layout_below="@id/ed_password"
                android:text="Registration" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@color/Black" />

            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:gravity="center"
                android:id="@+id/tv_forgotpass"
                android:padding="6dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="left"
                android:layout_below="@id/ed_password"
                android:text=" Forgot Password"/>
            </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
